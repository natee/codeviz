{
  "git": {
    "commitMessage": "release: v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "",
    "requireUpstream": true,
    "push": true,
    "tag": true,
    "tagName": "v${version}",
    "tagAnnotation": "Release v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": ["pnpm test", "pnpm run build"],
    "after:release": "echo 'ðŸŽ‰ Successfully released v${version}!'"
  }
}