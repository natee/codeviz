{
  "name": "codeviz",
  "version": "0.2.0",
  "description": "统计 Git commit 的时间分布，进而推导出项目的编码工作强度",
  "main": "dist/index.js",
  "bin": {
    "codeviz": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm run build",
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "release:dry": "release-it --dry-run"
  },
  "keywords": [
    "git",
    "996",
    "workload",
    "analysis",
    "cli"
  ],
  "author": "natee",
  "repository": {
    "type": "git",
    "url": "https://github.com/natee/codeviz"
  },
  "license": "MIT",
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^20.14.2",
    "@types/yargs": "^17.0.32",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "prettier": "^3.6.2",
    "release-it": "^19.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@inquirer/prompts": "^6.0.1",
    "@resvg/resvg-js": "^2.6.2",
    "cfonts": "^3.3.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "holiday-calendar": "^1.3.0",
    "open-web-browser": "^0.1.1",
    "ora": "^5.4.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
